page{
  background-color:rgb(226, 233, 236);
}
.container {
  height: 100%;
  display: flex;
  background-color: #ed4450;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 150rpx 0;
  box-sizing: border-box;
} 
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  font-size: 35rpx;
  color: #aaa;
}
.usermotto {
  margin-top: 100px;
}
.user_content{
  position: relative;
}
.user_content .user_main{
  position: absolute;
  width: 90%;
  padding-bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  top:-40rpx;
}
.user_content .user_main .history_wrap{
  background-color: #fff;
  display: flex;
}
.user_content .user_main .history_wrap navigator{
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.his_num{
  color: var(--themeColor);
}
.orders_wrap{
  background-color: #fff;
  margin-top: 30rpx;
}
.orders_wrap .orders_title{
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.order_content{
  display: flex;
}
.order_content navigator{
  flex: 1;
  padding: 15rpx 0;
  text-align: center;
}
.iconfont{
  color: var(--themeColor);
  font-size: 40rpx;
}
.address_wrap{
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.app_info_wrap{
  margin-top: 30rpx;
  width: 100%;
  height: 100%;
  background-color: #fff;
  padding: 20rpx;
}
.app_info_wrap .app_item_item{
  border-bottom: 1rpx solid #ccc;
  padding: 20rpx;
  position: relative;
}
.app_info_wrap .app_item_item button{
   top: -17rpx;
   left: 0;
  position: absolute;
  opacity:0;
}
.recommend_wrap{
  position: relative;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.recommend_wrap button{
  top: -17rpx;
  left: 0;
 position: absolute;
 opacity:0;
}